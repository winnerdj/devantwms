<form id="update_bintobin_form" method="POST" action="/bin-to-bin/bintobin_dtl">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Bin To Bin Detail</h3>
            </div>
            {{#each Bintobin_details}}
             <div id="search_div">
              <div class="row">
                  <div class="col-12 col-md-2">
                    <div class="form-group">
                      <label class="control-sidebar-subheading">
                        Bin to Bin No.
                      </label>
                      <input type="hidden" name="BinToBinNo" value="{{BinToBinNo}}"  class="form-control req">
                      <input type="text" autocomplete="off" value="{{BinToBinNo}}" class="form-control" disabled>
                    </div>
                  </div>
                

                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Assigned Employee
                    </label>
                     <!--input type="text" name="AssignedEmployee" value="{{AssignedEmployee}}" class="form-control req">-->
                     <input type="text" autocomplete="off" class="form-control getEmployeeBtn req" name="AssignEmployee" value="{{AssignEmployee}}"  data-toggle="modal" id="inp_ID" data-target="#employeeModal" readonly>
                  </div>
                </div>

                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                        Date Created
                    </label>
                    <input type="text" autocomplete="off"  value="{{dateFormat CreatedDateTime  "YYYY-MM-DD  h:mm A"}}" class="form-control req">
                  </div>
                </div>
                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                        Status
                    </label>
                    <input type="text" autocomplete="off" name="Status" value="{{Status}}" class="form-control req">
                  </div>
                </div>
              </div><!--end of row-->
            </div>   
 <div class="row" style="padding:20px;">
    <div class="col-12 col-md-12" >
        
            {{#if tbl_bintobin_details}}
            <table class="table table-bordered" id="asn_edit_item_tbl">
              <thead>
                  <tr>
                      <th>Item Code</th>
                      <th>Item Description</th>
                      <th>Serial No.</th>
                      <th>Location From</th>
                      <th>Location To</th>
                  </tr>
              </thead>
              {{#each tbl_bintobin_details}}
                {{#compare ../Status 'Completed'}}

                <tr>
                    <td>{{ItemCode}}</td>
                    <td>{{tbl_item_master.ItemDescription}}</td>
                    <td>{{SerialNo}}</td>
                    <td>{{LocationFrom}}</td>
                    <td>{{LocationTo}}</td>
                </tr>
                {{else}}
                <tr>
                    <td><input type="hidden" name="ID[]" value="{{ID}}" class="form-control" req readonly><input type="text" autocomplete="off" name="ItemCode[]" value="{{ItemCode}}" class="form-control" req readonly></td>
                    <td><input type="text" autocomplete="off" name="ItemDescription[]" value="{{tbl_item_master.ItemDescription}}" class="form-control req" required></td>
                    <td><input type="text" autocomplete="off" name="SerialNo[]" value="{{SerialNo}}" class="form-control req" required></td>
                    <td><input type="text" autocomplete="off" name="LocationFrom[]" value="{{LocationFrom}}" class="form-control req" required></td>
                    <td><input type="text" autocomplete="off" name="LocationTo[]" value="{{LocationTo}}" class="form-control req" required></td>
                </tr>
                {{/compare}}
              {{/each}}
            </table>
            {{/if}}
            
 {{#compare Status 'Planned'}}      
    <input type="hidden" name="submit_action" id="submit_action" value="Amend">
    <input type="submit" class="btn btn-danger submit_btn" value="Cancel">
    <input type="submit" class="btn btn-success submit_btn" value="Execute Bin To Bin">
    </div>
    {{/compare}}
</div>
<br />
{{/each}}
</form>