
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Locations</h3>
            </div>
             <div id="search_div">
               <form method="get" action="/location">
              <h4 class="filter-title">Filter</h4>
              <div class="row">
                  <div class="col-12 col-md-2">
                    <div class="form-group">
                      <label class="control-sidebar-subheading">
                        Location Code
                      </label>
                      <input type="text" class="form-control" name="LocationCode" value="{{LocationCode_inp}}" >
                    </div>
                  </div>
                  <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Description
                    </label>
                    <input type="text" class="form-control" name="LocationDescription" value="{{LocationDescription_inp}}" >
                  </div>
                </div>
                

                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      LocationType
                    </label>
                     <select class="form-control" name="Role">
                      <option></option>
                      {{#each rolelist}}
                          <option value="{{ID}}" {{#compare LocationType "Bin Location"  }}selected{{/compare}}>Bin Location</option>
                          <option value="{{ID}}" {{#compare LocationType "Staging"  }}selected{{/compare}}>Staging</option>
                      {{/each}}  
                      </select>
                  </div>
                </div>
                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Status
                    </label>
                    <select name="Status" class="form-control">
                        <option></option>
                        <option>Active</option>
                        <option>Inactive</option>
                    </select>
                  </div>
                </div>
                
              </div><!--end of row-->
              
                <div class="row">
                <div class="col-12 col-md-3">
                  <div class="form-group">
                    <button type="submit" class="btn btn-success btn-sm"  >
                      <span class="glyphicon glyphicon-search" aria-hidden="true"> </span> Search
                    </button>
                  </div>
                </div>
              </form>
              </div><!--end of row-->
            </div>
            
       
            <!-- /.box-header -->
            <div class="box-body">
              <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addLocationModal">
               Add Location
              </button>
              <table  class="table table-bordered table-hover table-responsive table-pagination"  style="margin-top: 20px;">
                <thead>
                <tr>
                  <th data-sortable="true">Location Code</th>
                  <th data-sortable="true">Description</th>
                  <th data-sortable="true">Type</th>
                  <th data-sortable="true">Status</th>
                  <th data-sortable="true">Warehouse</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
               {{#each locations}}
                  <tr>
                    <td>{{LocationCode}}</td>
                    <td>{{LocationDescription}}</td>
                    <td >{{LocationType}}</td>
                    <td >{{Status}}</td>
                    <td>{{WarehouseCode}}</td>
                    <td><a href="#" data-toggle="modal" data-target="#updateLocationModal" class="updatelocation_btn" data-id="{{ID}}"><span class="glyphicon glyphicon-pencil " aria-hidden="true" style="color:green;"></span></a></td>                       
                  </tr>
                {{else}}
                {{/each}}
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->


