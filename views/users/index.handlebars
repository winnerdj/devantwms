                  </div>
                </div>
              </form>
              </div><!--end of row-->
                
              
            </div>
            
       
            <!-- /.box-header -->
            <div class="box-body">
              <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createUserModal"  >
               Create User
            </button>
              <table  class="table table-bordered table-hover table-responsive table-pagination"  style="margin-top: 20px;">
                <thead>
                <tr>
                  <th data-sortable="true">Employee ID</th>
                  <th data-sortable="true">First Name</th>
                  <th data-sortable="true">Last Name</th>
                  <th data-sortable="true">Role</th>
                  <th data-sortable="true">Status</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
               {{#each Users}}
                  <tr>
                    <td>{{EmployeeID}}</td>
                    <td>{{FirstName}}</td>
                    <td>{{LastName}}</td>
                    <td data-role="{{Role}}">{{tbl_role.Role}}</td>   
                    <td>{{Status}}</td>
                    <td><a href="#" data-toggle="modal" data-target="#updateUserModal" class="updateuser_btn" data-id="{{ID}}" data-username="{{username}}"><span class="glyphicon glyphicon-pencil " aria-hidden="true" style="color:green;"></span></a></td>                       
                  </tr>
                {{else}}
                {{/each}}
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
