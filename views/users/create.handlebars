<form method="post" action="/users/create">
    {{#if errors}}
        {{#each errors}}
        <div class="alert alert-warning">{{msg}}</div>
        {{/each}}
    {{/if}}
    <div class="form-group">
        <label>Username</label>
        <input type="text" autocomplete="off" class="form-control" placeholder="Enter ..." name="username">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" autocomplete="off" class="form-control" placeholder="Enter ..." name="password">
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary">
    </div>
</form>
