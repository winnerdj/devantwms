
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Stock Accuracy</h3>
            </div>
             <div id="search_div">
               <form method="get" action="/stock_accuracy">
              <h4 class="filter-title">Filter</h4>
              <div class="row">
                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Item Code
                    </label>
                    <input type="text" autocomplete="off" class="form-control" name="ItemCode" value="{{ItemCode}}">
                  </div>
                </div>
                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Serial No
                    </label>
                    <input type="text" autocomplete="off" class="form-control" name="SerialNo" value="{{SerialNo}}">
                  </div>
                </div>
                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Date From
                    </label>
                    <input type="date" class="form-control" name="paramDate1" value="{{paramdate1_inp}}">
                  </div>
                </div>

                <div class="col-12 col-md-2">
                  <div class="form-group">
                    <label class="control-sidebar-subheading">
                      Date to
                    </label>
                    <input type="date" class="form-control" name="paramDate2" value="{{paramDate2_inp}}">
                  </div>
                </div>
                
                
              </div><!--end of row-->

              <div class="row">
                <div class="col-12 col-md-3">
                  <div class="form-group">
                    <button type="submit" class="btn btn-success btn-sm"  >
                      <span class="glyphicon glyphicon-search" aria-hidden="true"> Search</span>
                    </button>
                  </div>
                </div>
              </form>
              </div><!--end of row-->
                
              
            </div>
            
            <!-- /.box-header -->
            <div class="box-body">
              <form action="/stock_accuracy/create" method="POST" id="create_stock_accuracy">
                <input type="hidden" name="action">
                <button type="submit"  class="btn btn-success btn-sm" >Create Stock Accuracy Plan</button>
              </form>
              <table  class="table table-bordered table-hover table-responsive table-pagination" style="margin-top: 20px;">
                
                <thead>
                <tr>
                  <th data-sortable="true">Stock Accuracy No</th>
                  <th data-sortable="true">Created By</th>
                  <th data-sortable="true">Created Date Time</th>
                  <th data-sortable="true">Modified Date Time</th>
                  <th data-sortable="true">Status</th>
                </tr>
                </thead>
                <tbody>
               {{#each stock_accuracy_hdr}}
                  <tr>
                    <td><a href="/stock_accuracy/stock_accuracy_dtl/{{StockAccuracyNo}}">{{StockAccuracyNo}}</a></td>
                    <td>{{CreatedBy}}</td> 
                    <td>{{dateFormat CreatedDateTime  "YYYY-MM-DD  h:mm A"}}</td>         
                     <td>{{dateFormat ModifiedDateTime  "YYYY-MM-DD  h:mm A"}}</td>       
                     <td>{{Status}}</td>           
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->


